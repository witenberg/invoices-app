# Base URL of the application (used for generating links, e.g., invoice URLs)
BASE_URL=http://localhost:3000

# PostgreSQL database connection string (format: postgresql://username:password@host:port/database)
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/SimpleInvoices

# Secret key for NextAuth.js (used for signing/encrypting authentication tokens)
NEXTAUTH_SECRET=your_nextauth_secret

# Google OAuth Client ID (for "Sign in with Google" authentication)
GOOGLE_CLIENT_ID=your_google_client_id

# Google OAuth Client Secret (paired with GOOGLE_CLIENT_ID for authentication)
GOOGLE_CLIENT_SECRET=your_google_client_secret

# Email address for sending emails (e.g., invoice reminders)
EMAIL_USER=your_email_user

# Password or app-specific password for the email account (e.g., Gmail App Password)
EMAIL_PASSWORD=your_email_password